{
  "name": "@master-clash/remotion-core",
  "version": "0.1.0",
  "description": "Core state management and types for Remotion Fast video editor",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "remotion",
    "video-editor",
    "state-management"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.57.0",
    "react": "^19.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.3.1"
  }
}