# Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
APP_NAME=master-clash

# =============================================================================
# API Keys
# =============================================================================
# Google AI API Key (required for Gemini models)
GOOGLE_API_KEY=your-google-api-key-here

# OpenAI API Key (optional)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Other AI/ML Service Keys
# REPLICATE_API_KEY=
# STABILITY_API_KEY=
# KIE_API_KEY=your-kie-api-key-here

# Kling AI Video Generation (requires AK/SK for JWT authentication)
KLING_ACCESS_KEY=your-kling-access-key-here
KLING_SECRET_KEY=your-kling-secret-key-here

# =============================================================================
# Google AI Studio Configuration
# =============================================================================
# Base URL for Google AI Studio (via Cloudflare Gateway)
# Default: https://gateway.ai.cloudflare.com/v1/44af79e51582ca20c9003eb926540242/clash/google-ai-studio
# GOOGLE_AI_STUDIO_BASE_URL=your-custom-base-url-here

# =============================================================================
# Database Configuration
# =============================================================================
# Database URL for LangGraph checkpointing and workflow state
# Local development (SQLite):
DATABASE_URL=sqlite:///./data/checkpoints.db

# Cloudflare D1 (production - via Wrangler):
# DATABASE_URL=d1://your-d1-database-name
# CF_API_TOKEN=your-cloudflare-api-token-with-d1-edit
# CF_ACCOUNT_ID=your-cloudflare-account-id
# D1_DATABASE_ID=your-d1-database-uuid

# PostgreSQL (alternative):
# DATABASE_URL=postgresql://user:password@localhost:5432/master_clash
# Neon PostgreSQL (managed):
# DATABASE_URL=postgres://<user>:<password>@<project>-<region>.neon.tech/<db>?sslmode=require

# =============================================================================
# Storage Configuration
# =============================================================================
# Local or cloud storage paths
OUTPUT_DIR=./output
ASSETS_DIR=./assets

# Cloud Storage (if using)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1

# Cloudflare R2 Object Storage (S3-compatible)
# Get these from Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-r2-bucket-name
R2_PUBLIC_URL=https://pub-xxx.r2.dev  # Your public R2 domain

# Cloudflare D1 Database (for LangGraph Checkpointer)
# Get these from: wrangler d1 create master-clash-backend
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# =============================================================================
# Application Configuration
# =============================================================================
# Max concurrent tasks
MAX_WORKERS=4

# Logging level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# External Services
# =============================================================================
# Frontend URL (for asset proxy during video rendering)
FRONTEND_URL=http://localhost:3000

# Loro Sync Server (for real-time collaboration)
# LORO_SYNC_URL=ws://localhost:8787

# Redis (if using for caching/queue)
# REDIS_URL=redis://localhost:6379/0

# Sentry (if using for error tracking)
# SENTRY_DSN=

# =============================================================================
# Security
# =============================================================================
# Secret key for encryption/signing (generate with: openssl rand -hex 32)
# SECRET_KEY=your-secret-key-here

# Allowed hosts (for production)
# ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Development Settings
# =============================================================================
# Enable/disable features for development
ENABLE_CACHE=false
ENABLE_TELEMETRY=false
